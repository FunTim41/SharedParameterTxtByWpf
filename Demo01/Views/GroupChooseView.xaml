<Window
    x:Class="Demo01.Views.GroupChooseView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Demo01.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="移到指定组"
    Width="300"
    Height="120"
    Topmost="True"
    WindowStartupLocation="CenterScreen"
    WindowStyle="ToolWindow"
    mc:Ignorable="d">
    <StackPanel Margin="10">
        <ComboBox 
            Height="30" VerticalContentAlignment="Center"
            SelectedItem="{Binding SelectedGroup}"
            DisplayMemberPath="Name"
            ItemsSource="{Binding GroupList}" />
        <Button Command="{Binding SendGroupCommand}" HorizontalAlignment="Right" Margin="0 5 5 10" Height="25" Width="80" Content="确认"/>
    </StackPanel>
</Window>
